<%- include('./partials/header') %>

<div class="container" style="max-width:900px; margin:40px auto; background:#fff; padding:20px; border-radius:8px; box-shadow:0 2px 8px #ccc;">
    <h2>Ã‰tat du pays : Toutes les signalisations</h2>
    <table style="width:100%; border-collapse:collapse;">
        <thead>
            <tr style="background:#f4f4f4;">
                <th style="padding:8px; border:1px solid #ddd;">Nom utilisateur</th>
                <th style="padding:8px; border:1px solid #ddd;">Titre</th>
                <th style="padding:8px; border:1px solid #ddd;">Description</th>
            </tr>
        </thead>
        <tbody>
            <% signalisations.forEach(function(sig) { %>
                <tr>
                    <td style="padding:8px; border:1px solid #ddd;"><%= sig.User ? sig.User.nom : 'Inconnu' %></td>
                    <td style="padding:8px; border:1px solid #ddd;"><%= sig.User ? sig.User.titre : '' %></td>
                    <td style="padding:8px; border:1px solid #ddd;"><%= sig.description %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

